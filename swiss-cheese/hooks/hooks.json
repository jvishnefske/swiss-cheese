{
  "description": "Swiss Cheese orchestration - Stop and SubagentStop hooks for Makefile-based gating",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/orchestrate.py",
            "timeout": 120
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/orchestrate.py",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
